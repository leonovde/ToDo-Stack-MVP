<RelativeLayout
    android:id="@+id/reminder_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/reminder_image"
        android:layout_width="@dimen/activity_inner_icon"
        android:layout_height="@dimen/activity_inner_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_reminder_24dp"/>

    <TextView
        android:id="@+id/reminder_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="@string/reminder_caption"/>

</RelativeLayout>