<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/duration_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/duration_icon"
        android:layout_width="@dimen/activity_inner_icon"
        android:layout_height="@dimen/activity_inner_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_timer_black_24dp"/>

    <TextView
        android:id="@+id/duration_left_spent_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration_left_time"
        android:layout_toStartOf="@id/duration_text_view"
        android:layout_toLeftOf="@id/duration_text_view"
        android:layout_marginRight="4dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/duration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="@string/duration_default_value"/>

</RelativeLayout>